@using System.IO
@model FileManangerModel
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h4 class="text-center text-black-50 p-2 font-Arialblack bg-light">Slide Show</h4>
    <div class="row p-2">
        @if (Model.Files != null)
        {
            @foreach (FileInfo f in Model.Files)
            {
                <div class="col-3 border p-2 m-2 bg-light">
                    <form asp-action="Delete" method="post">
                        <div class="text-right">
                            <button class="border-0 bg-transparent" type="submit"><i class="fa fa-trash text-black-50"></i></button>
                        </div>
                        <img src="/Images/Slide/@f.Name" alt="Alternate Text" style="width:100%" />
                        <input type="hidden" name="filename" value="@f.Name" />
                    </form>
                </div>
            }
        }
    </div>
    <div class="border mt-2 p-2">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div class="text-center">
                <div class="bg-white d-inline-block p-2" style="height:150px;width:150px">
                    <img src="" alt="+ SELECT IMAGE THAT MATCHES YOUR PRODUCT NAME" id="ProductImage" style="height:100px" />
                </div>
                <br />
                <div class="w-50 d-inline-block text-left">
                    <label class="btn btn-primary" for="FormFile"><i class="fa fa-image"></i> Select Image</label>
                    <input type="file" name="FormFile" id="FormFile" accept="image/*" onchange="FileInputChange(this)" style="display:none" />
                </div>

                <div class="w-50 d-inline-block text-right">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </div>
        </form>
        <div>
            <span class="text-danger">@ViewBag.ImageError</span>
            <span class="text-success">@ViewBag.ImageUploaded</span>
        </div>
    </div>
</div>