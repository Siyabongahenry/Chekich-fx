@model List<Chekich_fx.Models.Address>
@{
    ViewData["Title"] = "AddressBook";
}
<div class="container">
    <h6 class="bg-gold text-center text-white p-2">Address Book </h6>

    @if (Model.Count > 0)
    {

        foreach (Address address in Model)
        {
            <div class="border p-2 bg-white mt-2 mb-2">

                <div class="text-center">
                    @Html.DisplayFor(model => address.Location)
                </div>
                <div class="text-center text-primary">
                    <b>@Html.DisplayFor(model => address.TownOrCity)</b>
                </div>
                <div class="text-right">
                    <form asp-action="Remove" method="post">
                        <input type="hidden" name="Id" value="@address.Id" />
                        <button type="submit" class="border-0 bg-transparent"><i class="fa fa-trash text-black-50"></i></button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div>
            <p>No addres found</p>
        </div>
    }
    <div class="text-center mb-2 mt-2">
        <a asp-action="InsertAddress" class="btn btn-primary text-white">Add Address</a>
    </div>
</div>

