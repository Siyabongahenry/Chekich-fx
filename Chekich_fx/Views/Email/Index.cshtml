
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h4 class="text-gold bg-light border p-2 font-Arialblack text-center">Chat Now</h4>
    <div class="bg-light border container mt-2 mb-2">
        <div class="m-2 p-1">
            <label class="text-gold" style="font-size:12px"><i class="fa fa-user"></i> Siyabonga Vilakazi</label>
            <div>
                <label class="ml-lg-5 ml-xl-5 ml-md-4">Hi,???</label>
            </div>
        </div>
        <div class="m-2 p-1 text-right">
            <label class="text-gold" style="font-size:12px"><i class="fa fa-user"></i> Sizwe Bhele</label>
            <div>
                <label class="ml-lg-5 ml-xl-5 ml-md-4" >Hi, How can we help you???</label>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Index", "Email", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <div>
                <textarea rows="4" class="form-control" placeholder="Type message..">
                    </textarea>
                <span class="text-danger"></span>
            </div>
            <div class="text-right">
                <button type="submit" class="btn bg-gold text-white rounded-0"><i class="fa fa-envelope-square text-white"></i> Send Now</button>
            </div>
            <div>
                <span style="color:green"></span>
            </div>
        </div>
    }

</div>

