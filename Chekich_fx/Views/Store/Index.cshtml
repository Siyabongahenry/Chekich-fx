@using Chekich_fx.Enums
@model Chekich_fx.ViewModels.ProductFiltersViewModel<Shoe>
@{
    ViewData["Title"] = "Index";
}

<div class="store-main-container">
    <div class="store-container-1 awe-fontdesign">
        <div class="p-2 awe-boxshadow m-2">
            <button id="btn-open-filter" class="w-100 awe-btn-outline border-0" onclick="hideFilters('btn-open-filter','prod-filter')">Show Filters&nbsp;<i class="fa fa-caret-down"></i></button>
        </div>
        <div id="prod-filter" class="overflow-hidden" style="height:0">
            <form asp-action="Index" method="get">
                <div class="p-2 awe-boxshadow m-2" style="border:1px solid #f3f3f3;">
                    <label class="w-100">Filter By Price</label>
                    <div>
                        <select name="Price" class="p-1 bg-theme text-theme-2 w-100">
                            <option value="0">Lowest To Highest</option>
                            <option value="1">Highest To Lowest</option>
                        </select>
                    </div>
                </div>
                <div class="m-2 p-2 awe-boxshadow" style="border: 1px solid #f3f3f3;">
                    <label class="w-100">Filter By Category</label>
                    <div>
                        <select name="Category" class="p-1 bg-theme text-theme-2 w-100" asp-items="Html.GetEnumSelectList<Category>()">
                        </select>
                    </div>
                </div>
                <div class="p-2 m-2 text-center">
                    <button class="awe-btn-outline" onclick="hideFilters('btn-open-filter','prod-filter')">Apply filters</button>
                </div>
            </form>
        </div>
    </div>
    <div class="store-container-2">
        <div class="search-form-container">
            <form  asp-action="Index" method="get">
                <input type="text" name="SearchString" placeholder=" Type here.." />
                <button id="btnsearchsubmit" class="bg-theme text-center"><i class="fa fa-search text-theme-2"></i></button>
            </form>

        </div>
        <div class="text-center" style="font-size:0.75rem;clear:both;">
            <span class="awe-fontdesign">Showing: <span class="badge bg-theme text-theme-2">@Model.ProductList.Count()</span></span>
        </div>
        <div>
            @await Component.InvokeAsync("Store", Model.ProductList)
        </div>
        <div class="text-right">
            <div page-model="@Model.PagingInfo" asp-action="Index" page-class="btn border" page-class-normal="btn" page-class-selected="btn bg-theme text-white active"
                 class="btn-group mt-4">
            </div>
        </div>
    </div>
</div>
 <script src="~/js/store.js" asp-append-version="true"></script>